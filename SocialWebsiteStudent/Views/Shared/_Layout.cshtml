<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Content/PostCommentBox.css">

</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        @Html.ActionLink("Studencki Mikroblog", "WallPost", "Post", new {area = ""}, new {@class = "navbar-brand"})
    </div>
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">

            <li style="margin-top: 13px">
                <form method="post" action="@Url.Action("FoundResult", "Search")">
                    @Html.TextBox("value")
                </form>
            </li>
            <li>@Html.ActionLink("Powiadomienia", "Notification", "Notification")</li>

            <li>@Html.ActionLink("Wiadomości", "Inbox", "Message")</li>

        </ul>
        @Html.Partial("_LoginPartial")
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    <hr/>

</div>

@Scripts.Render("~/bundles/jquery")
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
<script src="http://code.jquery.com/ui/1.8.22/jquery-ui.min.js" type="text/javascript"></script>
@Scripts.Render("~/bundles/bootstrap")

@RenderSection("scripts", required: false)
</body>
</html>